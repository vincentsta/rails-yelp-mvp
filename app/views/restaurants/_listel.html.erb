<div class="product">
  <div class='product-upvote'>
    <div class='product-count'>
      <%= @restaurant.avg_rating.round(1) if @restaurant.avg_rating %> <i class="fa fa-star star" aria-hidden="true"></i>
    </div>
  </div>
  <%= link_to restaurant_path(@restaurant), class: 'product-body' do |el| %>
    <div>
      <h3><%= @restaurant.name %></h3>
      <p><%= @restaurant.address %></p>
      <p> <%= "#{@restaurant.category.capitalize} - #{@restaurant.phone_number}" if @show %></p>
    </div>
  <% end %>
  <% if @show %>
    <div class="img-wrap">
      <%= image_tag 'https://unsplash.it/300/200', class: "img-body"%>
    </div>
  <% end %>
  <ul class="list-inline product-controls hidden-sm hidden-xs">
    <li>
      <% unless @show %>
        <%= link_to restaurant_path(@restaurant) do |el| %>
          <i class='fa fa-eye'></i>
        <% end %>
      <% end %>
    </li>
    <li>
      <%= link_to edit_restaurant_path(@restaurant) do |el| %>
        <i class='fa fa-pencil'></i>
      <% end %>
    </li>
    <li>
      <%= link_to restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } do |el| %>
          <i class='fa fa-trash'></i>
      <% end %>
    </li>
  </ul>
</div>
